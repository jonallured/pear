{
  "name": "@jonallured/pear",
  "description": "Credit where credit is due.",
  "version": "0.4.0",
  "author": "Jon Allured @jonallured",
  "bin": {
    "pear": "./bin/run"
  },
  "bugs": {
    "url": "https://github.com/jonallured/pear/issues"
  },
  "dependencies": {
    "@oclif/core": "^2.8.12",
    "@oclif/plugin-help": "^5.2.12"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.28",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.6.1",
    "oclif": "^3.9.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/jonallured/pear",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testEnvironment": "node",
    "testRegex": ".test\\.(ts|js)",
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "ts-jest"
    }
  },
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "bin": "pear",
    "commands": "./lib/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "jonallured/pear",
  "prettier": {
    "semi": false
  },
  "scripts": {
    "build": "tsc && oclif manifest",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "prettier-check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --pretty --noEmit"
  },
  "types": "lib/index.d.ts"
}
